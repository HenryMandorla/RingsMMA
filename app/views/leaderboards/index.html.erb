<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-6">Weekly Leaderboard</h1>
    <p class="text-gray-300 mb-2">Week of <%= @week_start.strftime("%B %d, %Y") %></p>
    <p class="text-sm text-gray-400 mb-8">Based on classes attended this week</p>

    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="divide-y divide-gray-200">
        <% @leaderboard.each do |entry| %>
          <div class="p-4 flex items-center justify-between <%= entry.rank <= 3 ? "bg-gray-50" : "" %>">
            <div class="flex items-center space-x-4">
              <div class="w-8 h-8 flex items-center justify-center rounded-full
                <%= case entry.rank
                    when 1 then "bg-yellow-400"
                    when 2 then "bg-gray-300"
                    when 3 then "bg-amber-600"
                    else "bg-gray-100"
                    end %>">
                <span class="text-sm font-semibold <%= entry.rank <= 3 ? "text-white" : "text-gray-600" %>">
                  <%= entry.rank %>
                </span>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900"><%= entry.user.name %></h3>
                <p class="text-sm text-gray-500"><%= entry.user.belt_level.titleize %> Belt</p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-lg font-semibold text-gray-900"><%= number_with_precision(entry.mat_hours, precision: 1) %> hours</p>
              <p class="text-xs text-gray-500">this week</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 